{{deploy_name,"one_host_three_pods"},
 {cluster_name,"test_cluster"},
 {num_instances,2},
  {host,{[this_host],["c100"]}},
  {pod,not_same_pod},
  {services,
   [
       {"test_add","1.0.0"},
       {"test_divi","1.0.0"},
       {"test_sub","1.0.0"}]
  }
}.
