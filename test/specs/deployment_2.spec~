{{deploy_name,"one_host_one_pod"},
 {cluster_name,"test_cluster"},
 {num_instances,2},
 {host,{[any_host,same_host],["c100","c200","c201"]}},
 {pod,same_pod},
 {services,
  [
      {"test_add","1.0.0"},
      {"test_divi","1.0.0"},
      {"test_sub","1.0.0"}
  ]
 }
}.
